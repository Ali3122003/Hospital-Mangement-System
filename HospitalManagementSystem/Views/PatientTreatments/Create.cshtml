@model PatientTreatmentViewModel

@{
    ViewData["Title"] = "Create Patient Treatment";
}

<h2>Create Patient Treatment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId">Patient</label>
        <select asp-for="PatientId" class="form-control" asp-items="Model.Patients">
            <option value="">-- Select Patient --</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TreatmentId">Treatment</label>
        <select asp-for="TreatmentId" class="form-control" asp-items="Model.Treatments">
            <option value="">-- Select Treatment --</option>
        </select>
        <span asp-validation-for="TreatmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ObtainDate">Obtain Date</label>
        <input asp-for="ObtainDate" class="form-control" type="date" />
        <span asp-validation-for="ObtainDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
