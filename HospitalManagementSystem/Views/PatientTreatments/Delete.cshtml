@model PatientTreatmentViewModel

@{
    ViewData["Title"] = "Delete Treatment";
}

<h2>Delete Treatment</h2>
<h4>Are you sure you want to delete this treatment record?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.PatientName</dd>

        <dt class="col-sm-2">Treatment</dt>
        <dd class="col-sm-10">@Model.TreatmentName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="PatientId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
