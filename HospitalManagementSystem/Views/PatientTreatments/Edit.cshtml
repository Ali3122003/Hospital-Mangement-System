@model PatientTreatmentViewModel

@{
    ViewData["Title"] = "Edit Patient Treatment";
}

<h2>Edit Patient Treatment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PatientId" />

    <div class="form-group">
        <label asp-for="TreatmentId">Treatment</label>
        <select asp-for="TreatmentId" class="form-control" asp-items="Model.Treatments">
            <option value="">-- Select Treatment --</option>
        </select>
        <span asp-validation-for="TreatmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ObtainDate">Obtain Date</label>
        <input asp-for="ObtainDate" class="form-control" type="date" />
        <span asp-validation-for="ObtainDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
