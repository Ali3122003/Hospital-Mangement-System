@model DepartmentViewModel
@{
    ViewBag.Title = "Delete Department";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Department</h2>
    <p class="text-warning">Are you sure you want to delete this department?</p>

    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.DepartmentId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DepartmentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
