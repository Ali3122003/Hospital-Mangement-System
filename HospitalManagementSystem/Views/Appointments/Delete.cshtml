@model HospitalManagementSystem.ViewModels.AppointmentViewModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>
<h4>Are you sure you want to delete this appointment?</h4>

<dl class="row">
    <dt class="col-sm-2">Doctor</dt>
    <dd class="col-sm-10">@Model.DoctorName</dd>
    <dt class="col-sm-2">Patient</dt>
    <dd class="col-sm-10">@Model.PatientName</dd>
    <dt class="col-sm-2">Time</dt>
    <dd class="col-sm-10">@Model.AppointmentTime</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="AppointmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>