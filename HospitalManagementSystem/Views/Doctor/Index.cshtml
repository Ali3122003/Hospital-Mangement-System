@model IEnumerable<DoctorViewModel>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container mt-4">
    <h2 class="mb-4 text-dark">Doctors</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">+ Add New Doctor</a>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Specialty</th>
                <th>Department</th>
                <th style="width: 210px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DoctorName</td>
                    <td>@item.Specialty</td>
                    <td>@item.DepartmentName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-sm btn-warning me-1">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-sm btn-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
