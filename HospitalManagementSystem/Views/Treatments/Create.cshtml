@model TreatmentViewModel
@{
    ViewData["Title"] = "Create Treatment";
}
<h2>Create Treatment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TreatmentName"></label>
        <input asp-for="TreatmentName" class="form-control" />
        <span asp-validation-for="TreatmentName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success my-3">Create</button>
    <a asp-action="Index" class="btn btn-secondary my-3">Back</a>
</form>
