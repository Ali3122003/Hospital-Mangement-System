@model TreatmentViewModel
@{
    ViewData["Title"] = "Delete Treatment";
}
<h2>Delete Treatment</h2>

<h4>Are you sure you want to delete this treatment?</h4>
<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Treatment Name</dt>
        <dd class="col-sm-9">@Model.TreatmentName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TreatmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
