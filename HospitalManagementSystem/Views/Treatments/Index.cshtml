@model IEnumerable<TreatmentViewModel>
@{
    ViewData["Title"] = "Treatments";
}
<h2 class="mb-3">Treatments</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Add Treatment</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Treatment Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var treatment in Model)
        {
            <tr>
                <td>@treatment.TreatmentName</td>
                <td>@treatment.Description</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@treatment.TreatmentId">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@treatment.TreatmentId">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@treatment.TreatmentId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
